<ContentControl x:Class="MCDA.Histogram"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
        <Grid>
            <Border BorderThickness="2" BorderBrush="Black">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!--<Canvas Height="100" Width="200">-->
                <Polygon Stretch="Fill" Name="histogramPolygon" Points="{Binding HistogramPoints}" Fill="Black" Opacity="0.8" Grid.Row="0" />
                <Polygon Stretch="Fill" Height="20" Name="breaksPolygon" Points="{Binding BreaksPoints}" Fill="Red" Opacity="0.8" Grid.Row="1" />
                <!--</Canvas>-->
            </Grid>
        </Border>
    </Grid>
</ContentControl>
