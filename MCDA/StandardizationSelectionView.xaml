<Window x:Class="MCDA.StandardizationSelectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Standardization Selection"
        WindowStyle="ToolWindow"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
    Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <RadioButton Grid.Row="0" GroupName="1" IsChecked="{Binding Path=IsMaximumScoreProcedure, Mode=TwoWay}" ToolTip="">Maximum Score Procedure</RadioButton>
        <RadioButton Grid.Row="1" GroupName="1" IsChecked="{Binding Path=IsScoreRangeProcedure, Mode=TwoWay}" ToolTip="(x_ij-x_min)/(x_max-x_min)">Score Range Procedure</RadioButton>
    </Grid>
</Window>
